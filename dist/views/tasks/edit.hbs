<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/tasks/update/{{task._id}}" method="POST">
                    <div class="form-group">
                        <input type="text" name="title" value="{{task.title}}" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="description" value= "{{task.description}}" class="form-control">
                    </div>
                    <button class="btn btn-success btn-block">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>